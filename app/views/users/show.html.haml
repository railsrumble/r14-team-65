%h3 User
%p= "Name: #{@user.name if @user.name}"
%table
  %thead
    %tr
      %th Gist
      %th Tags
      %th Files
  %tbody
    - @user.gists.each do |gist|
      %tr
        %td= gist.description || gist.gist_files.first.name
        %td
          = form_for gist, remote: true do |f|
            = f.text_field :tag_list, class: 'gist_tag_list'
            = f.hidden_field :id
            = f.submit 'save tags'
        %td
          - gist.gist_files.each do |file|
            = file.name
            %br
